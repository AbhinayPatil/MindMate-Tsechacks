<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView


        android:layout_width="wrap_content"
        android:layout_height="300dp" tools:srcCompat="@drawable/woman1" android:id="@+id/imageView"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.271"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="52dp">
        <Button
            android:id="@+id/oa"
            android:onClick="click"
            android:tag="1"
            android:text="This is your grandmother."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:background="@drawable/roundness"/>
        <Button
            android:id="@+id/ob"
            android:onClick="click"
            android:tag="2"
            android:text="This is your mother."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:background="@drawable/roundness"/>
        <Button
            android:id="@+id/oc"
            android:onClick="click"
            android:tag="3"
            android:text="This is your daughter."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:background="@drawable/roundness"/>
        <Button
            android:id="@+id/od"
            android:onClick="click"
            android:tag="4"
            android:text="This is your father."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:background="@drawable/roundness"/>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>