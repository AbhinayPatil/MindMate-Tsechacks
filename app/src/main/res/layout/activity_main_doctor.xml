<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor.MainActivityDoctor">

    <ScrollView
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/roundness"
                android:gravity="center_horizontal"
                android:text="Personal Details"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView

                android:text="Name "
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                />

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:text="Age"
                    android:textSize="14sp"
                    android:gravity="center_horizontal"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    />

                <EditText
                    android:id="@+id/ageEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:text="Blood Group "
                    android:textSize="14sp"
                    android:gravity="center_horizontal"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    />

                <EditText
                    android:id="@+id/bloodEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:text="Address "
                    android:textSize="14sp"
                    android:gravity="center_horizontal"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    />

                <EditText
                    android:id="@+id/addEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundness"
                android:gravity="center_horizontal"
                android:text="Medical History"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <CheckBox
                android:id="@+id/m1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Does patient abuse alcohol?" />

            <CheckBox
                android:id="@+id/m2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Does patient suffer from depression?" />

            <CheckBox
                android:id="@+id/m3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Does patient suffer from diabetes?" />

            <CheckBox
                android:id="@+id/m4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Does patient have family history of dementia?" />

            <CheckBox
                android:id="@+id/m5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is the patient forgetfull?" />
            <CheckBox
                android:id="@+id/m6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suffering from hallucination?" />

            <CheckBox
                android:id="@+id/m7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do they have head injury?" />

            <CheckBox
                android:id="@+id/m8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do they suffer from heart disease?" />

            <CheckBox
                android:id="@+id/m9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="trouble hearing?" />

            <CheckBox
                android:id="@+id/m10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="trouble moving?" />

            <CheckBox
                android:id="@+id/m11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="trouble speaking?" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundness"
                android:gravity="center_horizontal"
                android:text="Daily Task"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="able to bathe?" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="able to cook?" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="able to dress?" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="able to drive?" />

            <Button
                android:layout_gravity="center_horizontal"
                android:background="@drawable/roundness"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="submit"
                android:layout_margin="20dp"/>



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>